<div class="card-header">
  <h3>Sign Up</h3>
</div>
<div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <%= fa_icon "user"%>
        </span>
      </div>
      <%= f.text_field :first_name, autofocus: true,
          autocomplete: "first_name", 
          class: "form-control",
          placeholder: "First Name"
        %>
      <div>
        <% if resource.errors[:first_name].present?%>
          <span class='text-danger text-center'>
            <%= resource.errors[:first_name].first %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <%= fa_icon "user"%>
        </span>
      </div>
      <%= f.text_field :last_name, autofocus: true,
          autocomplete: "last_name", 
          class: "form-control",
          placeholder: "Last Name"
        %>
      <div>
        <% if resource.errors[:last_name].present?%>
          <span class='text-danger text-center'>
            <%= resource.errors[:last_name].first %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <%= fa_icon "user"%>
        </span>
      </div>
      <%= f.email_field :email, autofocus: true,
          autocomplete: "email", 
          class: "form-control",
          placeholder: "Email ID"
        %>
      <div>
        <% if resource.errors[:email].present?%>
          <span class='text-danger text-center'>
            <%= resource.errors[:email].first %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <%= fa_icon "key" %>
        </span>
      </div>
      <%= f.password_field :password, 
          autocomplete: "new-password",
          placeholder: 'Password',
          class: "form-control"
      %>
      <div>
        <% if resource.errors[:password].present?%>
          <span class='text-danger text-center'>
            <%= resource.errors[:password].first %>
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <%= fa_icon "key" %>
        </span>
      </div>
      <%= f.password_field :password_confirmation, 
          autocomplete: "new-password",
          placeholder: 'Confirm password',
          class: "form-control"
      %>
      <div>
        <% if resource.errors[:password_confirmation].present?%>
          <span class='text-danger text-center'>
            <%= resource.errors[:password_confirmation].first %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="actions form-group login_btn text-right">
      <%= f.submit "Sign up" %>
    </div>

  <% end %>
</div>
<div class="card-footer">
  <div class="d-flex justify-content-center links">
    Already have an account?<a href="/users/sign_in">Sign In</a>
  </div>
  <div class="d-flex justify-content-center">
    <a href="password/new">Forgot your password?</a>
  </div>
</div>

